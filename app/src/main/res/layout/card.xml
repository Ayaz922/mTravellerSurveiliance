<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/myrect"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:elevation="10dp"
        android:background="@drawable/myrect"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/back"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:id="@+id/actio">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Route"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/route_name"

                android:textSize="24sp"
                android:text="ROUTE"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/xy"
                android:layout_toRightOf="@+id/actio"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:text="Total Tickets : "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_tickets"
                android:layout_toRightOf="@+id/xy"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:text="Total Tickets"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/capacity_text"
                android:layout_toRightOf="@+id/actio"
                android:layout_below="@+id/total_tickets"
                android:text="Capacity : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/capacity"
                android:layout_toRightOf="@+id/capacity_text"
                android:layout_below="@+id/total_tickets"
                android:text="capacity"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/summary"
                android:layout_toRightOf="@+id/actio"
                android:layout_below="@+id/capacity_text"
                android:text="Summary"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/actio"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/back"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05-09"
                    android:textSize="14dp"
                    android:textColor="@color/white"

                    />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/t1"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/back"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09-13"
                        android:textSize="14dp"
                        android:textColor="@color/white"

                        />
                    <TextView

                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:text="T1-T2"
                        android:id="@+id/t2"
                        android:textSize="12dp"

                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/back"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13-17"
                        android:textSize="14dp"
                        android:textColor="@color/white"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="T1-T2"
                        android:id="@+id/t3"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/back"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17-21"
                        android:textSize="14dp"
                        android:textColor="@color/white"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="T1-T2"
                        android:id="@+id/t4"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/back"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21-24"
                        android:textSize="14dp"
                        android:textColor="@color/white"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="T1-T2"
                        android:id="@+id/t5"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/back"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00-05"
                        android:textSize="14dp"
                        android:textColor="@color/white"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="T1-T2"
                        android:id="@+id/t6"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>